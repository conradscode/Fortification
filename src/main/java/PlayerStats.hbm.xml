<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="models.PlayerStats" table="stats">
	
		<id name="id" type="int">
			<column name="id" />
			<generator class="assigned" />
		</id>
		
		<property name="health" type="int">
			<column name="health" />
		</property>
		<property name="maxHealth" type="int">
			<column name="maxHealth" />
		</property>
		
		<property name="money" type="int">
			<column name="money" />
		</property>
		
		<property name="dateSaved" type="java.lang.String">
            <column name="dateSaved" />
        </property>
        
        <property name="profilePicture" type="java.lang.String">
            <column name="profilePicture" />
        </property>
	</class>
</hibernate-mapping>
